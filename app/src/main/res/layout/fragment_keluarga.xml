<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_two"
    android:padding="40dp"
    tools:context=".KeluargaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_bold"
            android:text="Anda belum masuk\nke dalam keluarga"
            android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.119" />

        <EditText
            android:id="@+id/inputKodeKeluarga"
            android:layout_width="176dp"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:hint="x x x x"
            android:textAlignment="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.056" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/joinKeluargaButton"
            android:layout_width="249dp"
            android:layout_height="56dp"
            android:background="@drawable/primary_button"
            android:backgroundTint="@color/lightBlue"
            android:fontFamily="@font/calibri_bold"
            android:padding="10dp"
            android:text="Join"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputKodeKeluarga"
            app:layout_constraintVertical_bias="0.147" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_bold"
            android:text="Atau"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/joinKeluargaButton"
            app:layout_constraintVertical_bias="0.106" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createKeluargaButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/primary_button"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/calibri_bold"
            android:padding="10dp"
            android:text="Create"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.189" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>