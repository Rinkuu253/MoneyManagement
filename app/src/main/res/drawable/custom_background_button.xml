<!-- res/drawable/custom_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- Change the color to your desired color when selected -->
            <solid android:color="#FF5722" /> <!-- Example color: Orange -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!-- Change the color to your desired default color -->
            <solid android:color="#E0E0E0" /> <!-- Example color: Light Gray -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
